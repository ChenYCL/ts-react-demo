{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types",
      "./@types/"
    ]
  },
  "include": [
    "src",
    "@types/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/serviceWorker.ts"
  ]
}
